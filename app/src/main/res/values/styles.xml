<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SubtitleInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="FilterButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="BottomCard" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="HeaderCard" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FilterStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CardViewStyle" parent="TextAppearance.AppCompat">

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="elevation">10dp</item>
    </style>


    <style name="HeaderInfo" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>